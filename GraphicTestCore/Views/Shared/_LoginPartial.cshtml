@using Microsoft.AspNetCore.Identity
@using qBI.Models;
@using qBI.Areas.Identity;

@inject AppSignInManager SignInManager
@inject AppUserManager UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" onclick="document.getElementById('logoutForm').submit(); return false;" asp-page="/Account/Logout" title="Logout">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav mr-auto"> </ul>
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item"><a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}
