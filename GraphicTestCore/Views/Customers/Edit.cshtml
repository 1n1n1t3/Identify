@using qBIPro.Models;
@using qBIPro.Data;
@model qBIPro.Models.CustomerDetails
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerId" />
            <input type="hidden" asp-for="Customer.AreaId" />
            <div class="form-group">
                <label asp-for="Customer.CustomerName" class="control-label"></label>
                <input asp-for="Customer.CustomerName" class="form-control" />
                <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Type" class="control-label"></label>
                <select asp-for="Customer.Type" class="form-control" asp-items="@new SelectList(Enum.GetNames(typeof(Customer.CustomerType)))">
                    <option disabled selected value="">Select a type</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Customer.IdentificationNumber" class="control-label"></label>
                <input asp-for="Customer.IdentificationNumber" class="form-control" />
                <span asp-validation-for="Customer.IdentificationNumber" class="text-danger"></span>
            </div>
            <h4>Address</h4>
            <input type="hidden" asp-for="Addresses.AddressId" />
            <input type="hidden" asp-for="Addresses.CustomerId" />
            <div class="form-group">
                <label asp-for="Addresses.Street" class="control-label"></label>
                <input asp-for="Addresses.Street" class="form-control" />
                <span asp-validation-for="Addresses.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresses.PostalCode" class="control-label"></label>
                <input asp-for="Addresses.PostalCode" class="form-control" />
                <span asp-validation-for="Addresses.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresses.City" class="control-label"></label>
                <input asp-for="Addresses.City" class="form-control" />
                <span asp-validation-for="Addresses.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresses.Country" class="control-label"></label>
                <input asp-for="Addresses.Country" class="form-control" />
                <span asp-validation-for="Addresses.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresses.Name" class="control-label"></label>
                <input asp-for="Addresses.Name" class="form-control" />
                <span asp-validation-for="Addresses.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
